<%= render "devise/shared/secondheader"%>

<div class="main bg-dark">
 <div class="d-flex justify-content-center">
   <div class="card container m-3" style="width: 400px; height:500px">
         <%= image_tag "noimage-01.png", class:"rounded-circle" %>
     <div class="card-body">
        <h4 class="h4 card-title text-center"><%= @nickname %></h5>
         <p class="card-text text-center"><%= @introduce %></p>
           <div class="text-center">
            <%= link_to "プロフィールを編集する",  edit_user_path(current_user.id), class:"btn btn-primary" %>
           </div>
     </div>
    </div>
  <div class="d-block">
    <div class="card text-center container m-3" style="height:200px;" >
      <div class="card-body">
          <h5 class="card-title">いいねした投稿一覧</h5>
          <p class="card-text">以下のテキストを追加のコンテンツへの自然な導入としてサポート。</p>
       </div>
    </div>

    <div class="card container m-3" style="height:500px;" >
       <div class="card-body">
          <h4 class="h4 card-title font-weight-bold">投稿一覧</h5>
            <table class="table">
                 <tbody>
                        <% @informations.each do |information|%>
                      <tr>
                        <td>
                        <%= link_to information_path(information.id), style:"text-decoration: none;" do%>
                        <small class="text-muted"><%= information.updated_at.strftime("%Y-%m-%d %H:%M")%></small>
                        <p class=" badge bg-info text-dark"><%= information.tag.name %></p>
                        <p class="font-weight-bold text-dark"><%= information.title %></p>
                         <% end %>
                        </td>
                      </tr>
                        <% end %>
                  </tbody>
             </table>
       </div>
    </div>
  </div>
 </div> 
</div>





<%= render "devise/shared/footer"%>
