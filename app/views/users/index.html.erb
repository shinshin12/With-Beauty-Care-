        <div class="text-center m-5">
              <% if user_signed_in? %>
            <%= link_to "今すぐ投稿する", new_information_path, class:"btn btn-dark" %>
               <% end %>
            <%= link_to "投稿一覧を見る", informations_path, class:"btn btn-dark" %>
        </div>
     </div>
  </div>
 </div>

  <div class="container p-5  mt-3">
  <p class="h2 text-center text-white">ランキング</p>
  </div>
<div class="border-bottom border-secondary ">
 <div class="card-group container p-5 mb-3">
  <div class="card">
    <div class="card-body">
      <p class="h5 card-title text-center font-weight-bold">フォロー数ユーザーランキング</p>
    </div>
     <%= image_tag "image-04.jpg", class:"w-100", style:"height:250px;"%>
     <%= link_to "今すぐみる", read_ranks_path, class:"btn btn-dark"%> 
  </div>
  <div class="card">
    <div class="card-body">
      <p class="h5 card-title text-center font-weight-bold">いいね！投稿ランキング</p>
    </div>
    <%= image_tag "skin-01.jpg", class:"w-100", style:"height:250px;"%>
    <%= link_to "今すぐみる", put_ranks_path, class:"btn btn-dark"%> 
  </div>
  <div class="card">
    <div class="card-body">
      <p class="h5 card-title text-center font-weight-bold">閲覧数ランキング</p>
    </div>
