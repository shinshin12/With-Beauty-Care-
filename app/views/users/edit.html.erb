<%= render "shared/secondheader"%>
<div class="main bg-dark ">
  <p class="h1 container text-center text-white mb-5 border-bottom font-weight-bold"><%= @nickname%>さんのアカウント編集画面</p>
  <%= form_with model: @user, url:user_path(current_user.id), class: 'registration-main', local: true do |f| %>


  <form>
    <div class="text-center">  
     <% if @user.image? %> 
     <%= image_tag @user.image.url, id:"img1",class:"rounded-circle", style:"width:200px;height:200px;"%>
     <% else %>
     <%= image_tag "noimage-01.png", id:"img1",class:"rounded-circle", style:"width:200px;height:200px;"%>
     <% end %>
     </div>
     <div class="text-center">
     <%= f.file_field :image, id:"myfile", class:"text-white" %>
     </div>
    


   <div class="container">
    <%= f.label :"名前", class:"text-white mt-3"%>
    <div class="input-group">
    <%= f.text_field :surname, class:"form-control", placeholder:"名" %>
    <%= f.text_field :name, class:"form-control", placeholder:"姓" %>
     </div>
   </div>

   <div class="container">
    <%= f.label :"所属", class:"text-white mt-3" %>
    <%= f.text_field :organization, class:"form-control", placeholder:"企業名など" %>
   </div>

   <div class="container">
    <%= f.label :"メールアドレス", class:"text-white mt-3" %>
    <%= f.email_field :email, class:"form-control", placeholder:"@マークを含めてください" %>
   </div>

   <div class="container ">
    <%= f.label :"パスワード", class:"text-white mt-3" %>
    <%= f.password_field :password, class:"form-control", id:"password", type:"text", placeholder:"パスワードを入力"%>
   </div>

   
  
    <div class="container mt-4">
      <%= f.label :"郵便番号", class:"text-white"%>
     <div class="d-flex">
      <%= f.text_field :postal_code, class:"form-control col-md-3",id:"zipcode"%>
      <%= f.button "検索", class:"btn-white ml-2", type:"button", id:"post" %>
       </div>
    </div>
    


   <div class="container">
    <%= f.label :"都道府県", class:"text-white mt-3" %>
    <%= f.text_field :prefecture, class:"form-control col-md-3",id:"prefecture"%>
   </div>

   <div class="container">
      <%= f.label :"市区町村", class:"text-white mt-3" %>
      <%= f.text_field :city, class:"form-control",id:"city"%>
    </div>

    <div class="container">
      <%= f.label :"住所", class:"text-white mt-3" %>
      <%= f.text_field :address, class:"form-control",id:"address"%>
    </div>

  <div class="container">
   <%= f.label :"生年月日", class:"text-white mt-3" %>
  <div class="input-birth-wrap">
   <%= f.date_select(
                    :birthday,
                    class:"select-birth",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: (Time.now.year - 5),
                    end_year: 1930) %>
   </div>
  </div>

   <div class="container">
    <%= f.label :"自己紹介", class:"text-white mt-3" %>
    <%= f.text_area :introduce, class:"form-control",  placeholder:"初めまして" %>
   </div>
  
   <div class="container text-center mb-3 mt-3">
     <%= f.submit "更新する", class:"btn btn-white" %>
   </div>
 </form>
 <% end %>

 <%= render "shared/footer" %>
</div>