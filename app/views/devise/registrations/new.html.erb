<%= render "devise/shared/header"%>
<div class="main bg-dark">
 <div class="border-top border-secondary">
   <p class="h1 container text-center text-white mb-1 mt-3 font-weight-bold">新規登録画面</p>
 </div>
   <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

   
   <div class="container">
    <%= f.label :"ニックネーム", class:"text-white mt-5" %>
    <%= f.text_field :nickname, class:"form-control", placeholder:"ニックネームを入力" %>
   </div>

    <div class="container">
    <%= f.label :"メールアドレス", class:"text-white mt-5" %>
    <%= f.email_field :email, class:"form-control", placeholder:"@マークを含めてください" %>
   </div>

   <div class="container">
    <%= f.label :"パスワード", class:"text-white mt-5" %>
    <%= f.password_field :password, class:"form-control", id:"password", type:"password", placeholder:"パスワードを入力"%>
   </div>

   <div class="container">
    <%= f.label :"確認用パスワード", class:"text-white mt-5" %>
    <%= f.password_field :password_confirmation, class:"form-control", id:"password", type:"password", placeholder:"パスワードを再入力"%>
   </div>

   <div class="container text-center mb-4 mt-4">
     <%= f.submit "登録する", class:"btn btn-light" %>
   </div>
 </form>

 <% end %>
 <%= render "devise/shared/footer"%>
</div>

