<div class="main bg-dark" style="height:900px;">
 <div class="border-bottom border-secondary">
   <p class="h1 container text-center text-white mb-1 p-5 font-weight-bold">ログイン画面</p>
 </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
  
  <div class="container">
    <%= f.label :"メールアドレス", class:"text-white mt-5" %>
    <%= f.email_field :email, class:"form-control", placeholder:"@マークを含めてください" %>
   </div>

   <div class="container">
    <%= f.label :"パスワード", class:"text-white mt-5" %>
    <%= f.password_field :password, class:"form-control", id:"password", type:"password", placeholder:"パスワードを入力"%>
   </div>

   <div class="container">
    <p class="text-white mt-3">アカウントをお持ち出ない場合は<%= link_to "新規登録", new_user_registration_path%>から。</p>
   </div>

   <div class="container text-center mt-5 p-5">
     <%= f.submit "ログインする", class:"btn btn-light" %>
   </div>

 </form>

 <% end %>
 </div>