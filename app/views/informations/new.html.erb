
  <div class="hero-body">
    <div class="container">
      <h1 class="titlecenter">
        新規投稿
      </h1>
     </div>

   <%= form_with model: @information, url:informations_path, local: true do |f| %>

  
   <div class="container my-5">
      <div class="label">
        投稿画像
      </div>
      <div class="textarea">
        <%= f.file_field :image%>
      </div>
    </div>
    </div>


<div class="container my-5">
  <%= f.label :"タイトル", class:"label"%>
  <%= f.text_field :title, class:"input", placeholder: "タイトルを入力" %>
</div>


<div class="container my-5">
   <%= f.label :"投稿内容", class:"label" %>
  <%= f.text_area :sentence, class:"textarea", placeholder:"文を入力" %>
</div>



 <div class="actions text-center my-5">
<%= f.submit '投稿', class:"button text-dark px-5" %>
</div>
<%end%>