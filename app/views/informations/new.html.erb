<div class="main bg-dark ">
     <%= render "shared/secondheader"%>


   <div class="mt-5">
    <p class="h1 container text-center text-white mb-5 border-bottom font-weight-bold">投稿画面</p>
   </div> 

   <%= form_with model: @information, url:informations_path, local: true do |f| %>

  <form>
   <div class="container">
    <%= f.label :"タイトル", class:"text-white mt-3" %>
    <%= f.text_field :title, class:"form-control", placeholder:"タイトル名" %>
   </div>
   
   <div class="container">
   <%= f.label :"投稿画像", class:"text-white mt-5" %>
   <div class="item-image text-white">
   <%= f.file_field :image%>
    </div>
   </div>


   <div class="container">
    <%= f.label :"説明文など", class:"text-white mt-5" %>
    <%= f.text_area :sentence, class:"form-control", rows:7 %>
   </div>

   <div class="container">
    <%= f.label :"タグ", class:"text-white mt-3" %>
    <div class="form-select">
   <%= f.collection_select(:tag_id, Tag.all, :id, :name, {}) %>
    </div>
   </div>

  
   <div class="text-center m-5">
       <%= f.submit '投稿', class:"btn btn-light", style:"width:200px;" %>
    </div>
  <%end%>

   <%= render "shared/footer"%>
 </div>  