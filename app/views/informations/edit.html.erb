<div class="main bg-dark ">
  <%= render "shared/secondheader" %>
  <p class="h1 container text-center text-white mt-5 mb-5 border-bottom font-weight-bold">編集画面</p>
  <%= form_with model: @information, url: information_path(@information.id), local: true do |f| %>
  <form>
    
   <div class="text-center text-white"><%= f.label :"画像"%></div>
  <div class="text-center">  
     <% if @information.image? %> 
     <%= image_tag @information.image.url, id:"img1", style:"width:300px;height:200px;"%>
     <% else %>
     <%= image_tag "noimage.png", id:"img1", style:"width:300px;height:200px;"%>
     <% end %>
   </div>
   <div class="text-center ml-5">
     <%= f.file_field :image, id:"myfile", class:"text-white" %>
   </div>


   <div class="container">
    <%= f.label :"タイトル", class:"text-white mt-3" %>
    <%= f.text_field :title, class:"form-control" %>
   </div>
   

   <div class="container">
    <%= f.label :"説明文など", class:"text-white mt-5" %>
    <%= f.text_area :sentence, class:"form-control", rows:7 %>
   </div>

   <div class="container">
    <%= f.label :"タグ", class:"text-white mt-3" %>
    <div class="form-select">
   <%= f.collection_select(:tag_id, Tag.all, :id, :name, {}) %>
    </div>
   </div>

    <div class="text-center mb-5">
       <%= f.submit '投稿', class:"btn btn-light", style:"width:200px;" %>
    </div>
 <% end %>

 <%= render "shared/footer"%>
</div>