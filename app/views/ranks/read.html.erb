<div class="main bg-dark" style="min-height:900px;">
         <%= render "shared/secondheader" %>
          <p class="h2 text-white text-center m-5">フォロー数ユーザーランキング</p>
        <% @user_relations.each.with_index do |relation, i|%>
          <%= link_to user_path(relation.followed.id), style:"text-decoration: none;" do%>
              <table class="container border-bottom border-secondary">
                 <tbody> 
                    <tr> 
                     <td>
                     <div style="width:70px;">
                     <%if i == 0%>
                     <i class="fas fa-crown h1 text-warning"></i>
                     <% elsif i == 1 %>
                     <i class="fas fa-chess-king h1"></i>
                     <% elsif i == 2 %>
                     <i class="fas fa-chess-knight h1 text-info"></i>
                     <% else %>
                     <h2 class="h2 mr-5 text-white" style="text-decoration: none;"><%= i+1 %>位</h2></div></td>
                     <% end %>
   
                      <% if relation.followed.image? %>
                         <td><%= image_tag relation.followed.image.url, class:"rounded-circle", style:"width: 200px; height:200px" %></td>
                       <% else %>
                          <td><%= image_tag "noimage-01.png", class:"rounded-circle", style:"width: 200px; height:200px"%></td>
                      <% end %> 
                        <td class= "container">
                           <h2 class="h2 text-center mb-5 text-white"><%= relation.followed.nickname %>さん</h2>
                        </td>
                    </tr>
                 </tbody>
              </table>
          <% end %>
        <% end %>
     <%= render "shared/footer"%>
</div>